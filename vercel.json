{
  "version": 2,
  "name": "dncl-ebay-manager",
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/health",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "redirects": [
    {
      "source": "/ebay-auth",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/auth/success",
      "destination": "/ebay-auth",
      "permanent": false
    },
    {
      "source": "/auth/error",
      "destination": "/ebay-auth",
      "permanent": false
    }
  ]
} 